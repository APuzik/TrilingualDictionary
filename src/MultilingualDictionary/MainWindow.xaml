<Window x:Class="MultilingualDictionary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultilingualDictionary"
        xmlns:localVM="clr-namespace:MultiDictionaryViewModel;assembly=MultiDictionaryViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="562.952" Width="635.216">
    <Window.Resources>
        <localVM:MultiDictionaryVM x:Key="dictionaryVM" />
    </Window.Resources>
    <Grid>
        <ComboBox DataContext="{StaticResource dictionaryVM}" ItemsSource="{Binding Path=Languages}" SelectedIndex="0" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="280"/>
        <TreeView DataContext="{StaticResource dictionaryVM}" ItemsSource="{Binding Path=Letters}" VirtualizingPanel.IsVirtualizing="true" VirtualizingStackPanel.VirtualizationMode="Recycling" HorizontalAlignment="Left" Height="464" Margin="10,58,0,0" VerticalAlignment="Top" Width="280">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Children}">
                    <TextBlock Text="{Binding Name}"/>                    
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <TreeView Height="464" Margin="0,58,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="280"/>

    </Grid>
</Window>
