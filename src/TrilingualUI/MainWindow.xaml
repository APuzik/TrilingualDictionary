<Window x:Class="TrilingualUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Трёхязычный словарь по информатике и радиоэлектронике" Height="393" Width="964">
    <Grid>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="12,32,0,0" Name="cmbLanguages" VerticalAlignment="Top" Width="120" />
        <Label Content="Основной язык" Height="24" HorizontalAlignment="Left" Margin="12,4,0,0" Name="label1" VerticalAlignment="Top" />
        <ListBox HorizontalAlignment="Left" Margin="12,121,0,12" Name="listConceptions" Width="256" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,91,0,0" Name="txtSearch" VerticalAlignment="Top" Width="173" />
        <Button Content="Найти" Height="23" HorizontalAlignment="Left" Margin="193,90,0,0" Name="btnSearch" VerticalAlignment="Top" Width="75" />
        <Label Content="Поиск" Height="24" HorizontalAlignment="Left" Margin="12,61,0,0" Name="label2" VerticalAlignment="Top" />
        <GroupBox Header="Описание" Margin="274,10,0,-1" Name="groupBox1">
            <Grid>
                <TextBox Margin="6,94,10,9" Name="textBox2" />
                <ComboBox Height="23" HorizontalAlignment="Left" Margin="15,60,0,0" Name="cmbLanguageToSelect" VerticalAlignment="Top" Width="120" />
                <Label Content="Выберите язык" Height="24" HorizontalAlignment="Left" Margin="15,32,0,0" Name="label3" VerticalAlignment="Top" />
                <CheckBox Content="Показывать на всех доступных языках" Height="16" HorizontalAlignment="Left" Margin="167,67,0,0" Name="chkAllLanguages" VerticalAlignment="Top" Width="234" Checked="chkAllLanguages_Checked" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
